<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


	<bean id="person" class="com.amod.person.bean.PersonBean">
		<property name="pName" value="Amod"></property>
		<property name="pAge" value="23"></property>
		<property name="isVeg" value="false"></property>
		<constructor-arg name="address" value="Bangalore"></constructor-arg>
	</bean>
</beans>